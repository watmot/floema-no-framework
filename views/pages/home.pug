extends ../base.pug 

block variables 
  - var template = 'home'

block content 
  .home 
    .home__wrapper 
      include ../partials/verticaltitle
      .home__gallery
        each media in home.data.gallery
          figure.home__gallery__media
            img.home__gallery__media__image(alt=media.image.alt src=media.image.url)
     
      .home__button__wrapper
        a.home__button(href=Link(home.data.collections))=home.data.button
          svg.home__button__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 550 137")
            path(stroke="currentColor" fill="none" d="M275,1.5c151.05,0,273.5,30,273.5,67s-122.45,67-273.5,67S1.5,105.5,1.5,68.5,124,1.5,275,1.5Z")